<Window x:Class="DataAnalyzer.WizardShell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DataAnalyzer"
        mc:Ignorable="d"
        Title="Data Analyzer" Height="600" Width="800">
    <Window.DataContext>
        <Binding RelativeSource="{RelativeSource Self}"/>
    </Window.DataContext>
    <DockPanel Margin="10">
        <!-- Navigation buttons -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Center" Height="Auto" Margin="0,10,0,0">
            <Button Content="Back" Width="80" Margin="5" IsEnabled="{Binding BackEnabled}" Click="BackButton_OnClick"/>
            <Button Content="{Binding NextLabel}" Width="80" Margin="5" IsEnabled="{Binding CurrentPage.CanGoNext}" Click="NextButton_OnClick"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="CancelButton_OnClick"/>
        </StackPanel>

        <!-- Content area for wizard pages -->
        <ContentControl Content="{Binding CurrentPage}" DockPanel.Dock="Top" />

        

    </DockPanel>
</Window>
